DATABASE_URL="postgres://user:password@localhost:5432/fossvps"
JWT_SECRET="your_super_secret_jwt_key_here"
NODE_ENV="development"
PROXMOX_API_URL=""
INCUS_API_URL=""
SUPPORT_EMAIL="support@fossvps.org"

# CORS: comma-separated allowed origins for frontend (include protocol)
# Example: http://localhost:3000,https://dashboard.w9.nu
CORS_ALLOWED_ORIGINS="http://localhost:3000"

# Cookie settings for authentication (production: set COOKIE_DOMAIN to your root domain)
# COOKIE_SAMESITE should be 'None' to allow cross-site WebSocket cookies with Secure
COOKIE_SAMESITE="None"
COOKIE_SECURE="true"
# Optional: set to ".dashboard.w9.nu" in production to allow cookies across subdomains
COOKIE_DOMAIN=""

# WebSocket base URL used by frontend when connecting directly (override in frontend env)
WS_BASE_URL="wss://api.dashboard.w9.nu"
# NOTE: Frontend build-time envs (used at bundling) are: NEXT_PUBLIC_API_URL and NEXT_PUBLIC_WS_URL
# See `frontend/.env.example` for examples and guidance
